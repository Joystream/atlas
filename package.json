  "name": "atlas-app",
  "description": "UI for consuming Joystream - a user governed video platform",
  "license": "GPL-3.0",
  "directories": {
    "src": "src"
  },
  "files": [
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Joystream/atlas.git"
  },
  "bugs": {
    "url": "https://github.com/Joystream/atlas/issues"
