{
  "description": "UI for consuming Joystream - a user governed video platform",
  "license": "GPL-3.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Joystream/atlas.git"
  },
  "bugs": {
    "url": "https://github.com/Joystream/atlas/issues"
  },
  "scripts": {
    "atlas:dev": "yarn workspace @joystream/atlas dev",
    "atlas:build": "yarn workspace @joystream/atlas build",
    "atlas:lint": "yarn workspace @joystream/atlas lint",
    "atlas:storybook": "yarn workspace @joystream/atlas storybook",
    "atlas:build-storybook": "yarn workspace @joystream/atlas build-storybook",
    "lint-staged": "lint-staged",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.{tsx,ts}": [
      "eslint --cache --fix",
      "prettier --write",
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "express": "^4.17.2",
    "graphql-request": "^3.7.0",
    "node-html-parser": "^5.2.0"
  },
  "devDependencies": {
    "@emotion/eslint-plugin": "^11.5.0",
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/node": "^14",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "~2.5.0",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "typescript": "^4.5.2"
  },
  "resolutions": {
    "postcss-safe-parser": "4.0.2",
    "svgo": "patch:svgo@npm:1.3.2#.yarn/patches/svgo-npm-1.3.2-4cceb54daa",
    "bn.js": "4.12.0",
    "@polkadot/wasm-crypto": "4.2.1",
    "@polkadot/wasm-crypto-wasm": "4.2.1",
    "@polkadot/wasm-crypto-asmjs": "4.2.1",
    "@joystream/types": "patch:@joystream/types@npm:0.16.1#.yarn/patches/@joystream-types-npm-0.16.1-ff262063cb"
  },
  "engines": {
    "node": ">=14"
  },
  "madge": {
    "tsConfig": "./tsconfig.json",
    "fileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ]
  }
}
